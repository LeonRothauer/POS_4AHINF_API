<Window x:Class="WpfAppNotiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNotiz"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" Height="450">
    <Grid Background="#211F25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="8" Width="Auto">
            <ListView x:Name="lstNotizen" Background="#424242" FontSize="10px" FontStyle="Italic" Foreground="White" SelectionChanged="lstNotizen_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border BorderThickness="0,0,0,1" BorderBrush="White">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <Label Width="100" Height="50" FontWeight="Bold" FontSize="15px" FontStyle="Italic" Foreground="White" VerticalAlignment="Top" Content="Titel:"/>
                <TextBox x:Name="txtTitel" Width="600" Height="50" VerticalAlignment="Top"/>
                <Label Width="100" Height="50" FontWeight="Bold" FontSize="15px" FontStyle="Italic" Foreground="White" VerticalAlignment="Top" Content="Notiz:"/>
                <TextBox x:Name="txtNotiz" Width="600" Height="150" VerticalAlignment="Top"/>
                <Label x:Name="lblErstelldatum" Width="600" VerticalAlignment="Top" Content="{Binding SelectedItem.Erstelldatum, ElementName=lstNotizen}" Background="#211F25" FontSize="10px" FontStyle="Italic" Foreground="White"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Grid.Row="1" Columns="4" Rows="1" HorizontalAlignment="Center">
                        <Button x:Name="btnNew" Margin="20,10,20,0" Click="btnNewNotiz_Click" FontSize="10px" FontStyle="Italic" Foreground="White" Background="#424242" Width="100" Height="50" Content="New"/>
                        <Button x:Name="btnChange" Margin="20,10,20,0" Click="btnChangeNotiz_Click" FontSize="10px" FontStyle="Italic" Foreground="White" Background="#424242" Width="100" Height="50" Content="Change"/>
                        <Button x:Name="btnDelete" Margin="20,10,20,0" Click="btnDelete_Click" FontSize="10px" FontStyle="Italic" Foreground="White" Background="#424242" Width="100" Height="50" Content="Delete"/>
                        <Button x:Name="btnLoad" Margin="20,10,20,0" Click="btnLoad_Click" FontSize="10px" FontStyle="Italic" Foreground="White" Background="#424242" Width="100" Height="50" Content="Load"/>
                    </UniformGrid>
                </Grid>

            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
